@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<header class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")">
    <div class="logosec hover-pointer">
        <img src="~/img/reviewlogo.png"
             style="width: 185px;" alt="logo"
             onclick="window.location.href = '@Url.Action("Index", "Home")';">
    </div>
  
    <a asp-action="Index" asp-controller="Suficiencia">Suficiencia</a>
    <a asp-action="Index" asp-controller="Cabucos">Cabucos</a>
    <a asp-action="Cejudo" asp-controller="Cejudo">CEJUDO</a>
    <a asp-action="Index" asp-controller="Tagaro">Tagaro</a>
    <a asp-action="Index" asp-controller="Talaba">Talaba</a>
    <a asp-action="Index" asp-controller="Book">Books</a>
    <a asp-action="Create" asp-controller="Book">Create Book</a>

    <div class="logosec">
        @HttpContextAccessor.HttpContext.Session.GetString("UserName")
        <div class="mr-20 hover-pointer" style="position: relative">
            <div class="dp">
                <img src="~/img/profile-logo.png"
                     class="dpicn hover-pointer"
                     alt="dp">
            </div>
            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-gear"></i>
                        <a href="#">Settings</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
